{% extends 'base.html.twig' %}

{% block body %}
    <h1>Cerveza</h1>

    <div class="panel panel-default">
    <div class="panel-body">

    <div class="form-group col-xs-6">
    <table  class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th>Precio</th>
            <th>Destacada</th>
            <th>Alcohol</th>
            <th>Foto</th>
            <th>Presentacion</th>
            <th>Promo</th>
            <th>Estilo</th>
            <th>Origen</th>
            <th>Color</th>
          </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ cerveza.id }}</td>
                <td>{{ cerveza.nombre }}</td>
                <td>{{ cerveza.descripcion }}</td>
                <td>{{ cerveza.precio }}</td>
                <td>{% if cerveza.destacada %}Yes{% else %}No{% endif %}</td>
                <td>{{ cerveza.alcohol }}</td>
                <td>{{ cerveza.foto }}</td>
              <td>{{ cerveza.presentacion }}</td>
              <td>{% if cerveza.promo %}Yes{% else %}No{% endif %}</td>
              <td>{{ cerveza.estilo }}</td>
              <td>{{ cerveza.origen }}</td>
              <td>{{ cerveza.color }}</td>
            </tr>
        </tbody>
    </table>
  </div>
  </div>
  <div class="panel-footer">
          {{ form_start(delete_form) }}
            <a class="btn " href="{{ path('cerveza_index') }}">Volver</a>
            <button type="submit" value="Delete" class="btn  btn-success">Borrar</button>
          {{ form_end(delete_form) }}
  </div>
</div>
{% endblock %}
