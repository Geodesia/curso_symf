{% extends 'base.html.twig' %}

{% block body %}
    <h1>Cliente edit</h1>

    <div class="panel panel-default">
		<div class="panel-body">

    {{ form_start(edit_form, {"attr":{"novalidate":"novalidate"}}) }}
